<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="370dp"
    android:minHeight="370dp"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:maxHeight="370dp"
    android:maxWidth="270dp"
    android:minWidth="270dp">

    <ImageView
        android:layout_marginTop="16dp"
        android:id="@+id/redeemCardImage"
        android:src="@drawable/card_25"
        android:textSize="22sp"
        android:layout_width="160dp"
        android:layout_height="200dp" />

    <TextView
        fontPath="fonts/ProximaNovaBold.otf"
        android:textColor="#060e31"
        android:gravity="center_horizontal"
        android:text="Please, fill the information field\nbelow and click the REDEEM button"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:maxLength="100"
        android:singleLine="true"
        android:inputType="textEmailAddress"
        android:id="@+id/emailText"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:hint="Your email address"
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/redeem_dialog"
        android:layout_marginTop="12dp"
        android:id="@+id/redeemBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
